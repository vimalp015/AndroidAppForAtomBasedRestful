<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_e_sports_details_display"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="in.lamiv.android.newsfeedfromatomservice.eSportsDetailsDisplayActivity">

        <ImageView
            android:id="@+id/imageViewIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/details_text_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageViewIcon"
            android:layout_margin="@dimen/text_margin"
            android:layout_marginTop="10dp"
            android:text="@string/title"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/details_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/details_text_label"
            android:layout_marginLeft="20dp"
            android:textAppearance="?attr/textAppearanceListItem" />


        <TextView
            android:id="@+id/details_summary_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/details_text"
            android:layout_margin="@dimen/text_margin"
            android:layout_marginTop="10dp"
            android:text="@string/summary"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/details_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/details_summary_label"
            android:layout_marginLeft="20dp"
            android:textAppearance="?attr/textAppearanceListItem" />

        <TextView
            android:id="@+id/details_updated_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/details_summary"
            android:layout_margin="@dimen/text_margin"
            android:layout_marginTop="10dp"
            android:text="@string/updated"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/details_updated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/details_updated_label"
            android:layout_marginLeft="20dp"
            android:textAppearance="?attr/textAppearanceListItem" />

        <TextView
            android:id="@+id/details_rights_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/details_updated"
            android:layout_margin="@dimen/text_margin"
            android:layout_marginTop="10dp"
            android:text="@string/rights"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/details_rights"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/details_rights_label"
            android:layout_marginLeft="20dp"
            android:textAppearance="?attr/textAppearanceListItem" />

    </RelativeLayout>
</ScrollView>